<%= form_for(leaveday) do |f| %>
  <% if leaveday.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(leaveday.errors.count, "error") %> prohibited this leaveday from being saved:</h2>
      <ul>
      <% leaveday.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :FromDate %>
    <%= f.date_select :datefrom %>
  </div>

    <div class="field">
    <%= f.label :ToDate %>
    <%= f.date_select :dateto %>
  </div>

  <div class="field">
    <%= f.label :leavetype %>
    <%= f.select :leavetype, [ 'Annual Leave','Personal Leave','Sick Leave' ], :prompt => 'Select One' %>
  </div>

  <div class="field">
    <%= f.label :duration%>
    <%= f.select :duration, [ '1','2','3','4','5'], :prompt => '-' %>
     <%= f.label '(Day)' %>
  </div>

  <div class="field">
    <i><%= f.text_area :description , cols: "50", rows: "5", :required => true, placeholder: 'Fill more description here..(1-120 Characters) ' %></i>
  </div>

  <div class="actions">
    <%= f.submit 'Submit', class: 'btn btn-primary' %>
    <%= link_to 'Back', leavedays_path, class: 'btn btn-danger' %>
  </div>
<% end %>
