<%= form_for(leaveday) do |f| %>
  <% if leaveday.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(leaveday.errors.count, "error") %> prohibited this leaveday from being saved:</h2>
      <ul>
      <% leaveday.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :date %>
    <%= f.date_select :date %>
  </div>


  <div class="field">
    <%= f.label :leavetype %>
    <%= f.select :leavetype, [ 'Annual Leave','Personal Leave','Sick Leave' ], :prompt => 'Select One' %>
  </div>

  <div class="field">
    <%= f.label :duration%>
    <%= f.select :duration, [ '1.0','1.5','2.0','2.5','3.0' ], :prompt => '0.5' %>
     <%= f.label '(Day)' %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
