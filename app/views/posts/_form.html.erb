<%= form_for(post) do |f| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="field">
    <%= f.label :date %>
    <%= f.text_field :date, :value => Date.today, :disabled => true %>
  </div>

  <div class="field">
    <%= f.label :timein %>
    <%= f.time_select :timein %>
  </div>

  <div class="field">
    <%= f.label :timeout, "timeout" %>
    <%= f.time_select :timeout %>
  </div>

  <div class="field">
    <%= f.text_area :description, cols: "50", rows: "5", :required => true, placeholder: 'Fill more description here..(1-120 Characters) '  %>
  </div>

  <div class="actions">
    <%= f.submit 'Submit', class: 'btn btn-primary' %>
    <%= link_to 'Back', posts_path, class: 'btn btn-danger'  %>
  </div>
<% end %>
   </div>
    </section>
  </div>
</div>
