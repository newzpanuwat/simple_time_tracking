<h1>Time Tracking </h1>
<div class="media">
  <div class="media-body">
<table class="table table-hover">

  <thead>
    <tr>
      <th>Date</th>
      <th>Timein</th>
      <th>Timeout</th>
       <th>Description</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
      <% if post.user == current_user %>
          <td><%= post.date.strftime("%d-%b-%Y") %></td>
          <td><%= post.timein.strftime("%H-%M-%S") %></td>
          <td><%= post.timeout.strftime("%H-%M-%S") %></td>
          <td><%= post.description %></td>
          <td><%= post.user.email %></td>
            <td><%= link_to 'Show', post %></td>
            <td><%= link_to 'Edit', edit_post_path(post) %></td>
            <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure want to delete ?' } %></td>
        <% end %>
   </div>
  </div>
      </tr>
    <% end %>
 
  </tbody>
</table>

<br>

<%= link_to 'Add Working time', new_post_path, class:"btn btn-default" %>
