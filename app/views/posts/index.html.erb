<div class="container-fluid">
    <section class="container">
		<div class="container-page">				
			<div class="col-md-12">	
        <h1>Time Tracking </h1><i>Show all data</i>
          <div class="media">
              <div class="media-body">
                <table class="table table-hover">           
                      
  <thead> 
    <tr>
      <th>Date</th>
      <th>Time-in</th>
      <th>Time-out</th>
      <th>Description</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
                
<%= line_chart @posts.group(:date).count, min: 0, max: 4, label: "All employee work today: ", download: true, xtitle: "Date", ytitle: "Employees" %>

  <br>
  <%= link_to 'Add Working time', new_post_path, class:"btn btn-default" %>
  <br>
    <% @posts.each do |post| %>
      <tr>
     
          <td><%= post.date.strftime("%d-%b-%Y") %></td>
          <td><%= post.timein.strftime("%H:%M:%S") %></td>
          <td><%= post.timeout.strftime("%H:%M:%S") %></td>
          <td><%= post.description %></td>
          <td><%= post.user.email %></td>
          <td><%= link_to 'Show', post, class:'btn btn-sm btn-primary' %></td>
        <% if post.user == current_user %>
          <td><%= link_to 'Delete', post, class:'btn btn-sm btn-danger', method: :delete, data: { confirm: 'Are you sure want to delete ?' } %></td>
        <% end %>
   
   </div>
  </div>
   </div>
    </section>
  </div>
</div>
      </tr>
    <% end %>
 
  </tbody>
</table>
<br>



