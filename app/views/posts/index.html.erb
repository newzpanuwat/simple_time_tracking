 <div class="container">
      <!-- Main component for a primary marketing message or call to action -->
      <div class="jumbotron">
      <h2><p>Time Tracking </h2></p>
      <i>Display your Time-in and Time-out logs</i>
          <div class="media">
              <div class="media-body">
                <table class="table table-hover">                                  
  <thead> 
    <tr>
      <th>Date</th>
      <th>Time-in</th>
      <th>Time-out</th>
      <th>Description</th>
      <th>Email Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>      
  <br>
    <% @posts.each do |post| %>
      <tr>
          <% if post.user == current_user %>
          <td><%= post.date.strftime("%d-%b-%Y") %></td>
          <td><%= post.timein.strftime("%H:%M:%S") %></td>
          <td><%= post.timeout.strftime("%H:%M:%S") %></td>
          <td><%= post.description %></td>
          <td><%= post.user.email %></td>
          <td><%= link_to 'Show', post, class:'btn btn-sm btn-primary' %></td>   
          <td><%= link_to 'Delete', post, class:'btn btn-sm btn-danger', method: :delete, data: { confirm: 'Are you sure want to delete ?' } %></td>
        <% end %>
  </div>
</div>
      </tr>
    <% end %>
   </div>
  </div>
 </tbody>
</table>

<%= link_to 'Add Working time', new_post_path, class:"btn btn-default" %>
  <br>

</div>

