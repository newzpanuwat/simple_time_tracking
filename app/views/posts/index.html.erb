<div class="container-fluid">
    <section class="container">
		<div class="container-page">				
			<div class="col-md-12">	
        <h1>Time Tracking </h1><i>Display your Time-in and Time-out history</i>
         <div class="pull-right range-query">
                      <%= form_tag posts_path, method: :get do %>
                       <%= label_tag 'Description' %>
                      <%= text_field_tag :search, params[:search], :placeholder => "Search", :required => true %>
                      <%= submit_tag 'Search', class: 'btn search-button' %>
                      <% end %>
                </div>
          <div class="media">
              <div class="media-body">
                <table class="table table-hover">           
                      
  <thead> 
    <tr>
      <th>Date</th>
      <th>Time-in</th>
      <th>Time-out</th>
      <th>Description</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
                
  <br>
    <% @posts.each do |post| %>
      <tr>
          <% if post.user == current_user %>
          <td><%= post.date.strftime("%d-%b-%Y") %></td>
          <td><%= post.timein.strftime("%H:%M:%S") %></td>
          <td><%= post.timeout.strftime("%H:%M:%S") %></td>
          <td><%= post.description %></td>
          <td><%= post.user.email %></td>
          <td><%= link_to 'Show', post, class:'btn btn-sm btn-primary' %></td>   
          <td><%= link_to 'Delete', post, class:'btn btn-sm btn-danger', method: :delete, data: { confirm: 'Are you sure want to delete ?' } %></td>
        <% end %>
  </div>
</div>
      </tr>
    <% end %>
   </div>
  </div>
   </div>
    </section>
  </tbody>
  
</table>

 
<%= link_to 'Add Working time', new_post_path, class:"btn btn-default" %>
  <br>



